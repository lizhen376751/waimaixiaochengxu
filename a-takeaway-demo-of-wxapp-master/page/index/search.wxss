.header {
	display: -webkit-flex;
	padding: 20rpx;
	background: #fff;
}

.header .icon {
	width: 40rpx;
	height: 40rpx;
	vertical-align: top;
}

.header .search {
	-webkit-flex: 1;
	color: #000;
	font-size: 30rpx;
	line-height: 40rpx;
	padding: 10rpx;
	border-radius: 10rpx;
	background: #eee;
}

.header .search .icon {
	float: left;
	margin: 7rpx 5rpx 0 0;
}

.header button {
	margin-left: 20rpx;
	font-size: 30rpx;
}

.header input {
	height: 30rpx;
}

.result {
	padding: 0;
}

.result .filters {
	z-index: 1;
	position: relative;
	display: -webkit-flex;
	border-top: 1rpx solid #efefef;
	border-bottom: 1rpx solid #efefef;
	background: #fff;
}

.result .filters .filter {
	-webkit-flex: 1;
	text-align: center;
	color: #696969;
	font-size: 30rpx;
	line-height: 3;
}

.result .filters .filter .v {
	display: none;
}

.result .filters .filter.active {
	color: #000;
	font-weight: bold;
}

.result .filters .filter.active .v {
	display: inline-block;
}

.result scroll-view {
	position: absolute;
	top: 110rpx;
	bottom: 10rpx;
	left: 0;
	right: 0;
	background: #fff;
}

.result .shop {
	padding: 10rpx 0;
	border-bottom: 1rpx solid #efefef;
}

.result .shop .shopconnection {
  display: -webkit-flex;
}
.result .shop .shopname{
  padding: 10rpx 20rpx;
}
.result .shop .shopname .itemname{
 font-size: 45rpx;
 font-weight:600;
 margin-bottom: 15rpx;
}
.result .shop .shopname .itemaddress{
   font-size: 30rpx;
 color: #696969;
 margin-bottom: 10rpx;
}
.result .shop .shopname .itemdesc{
   color: #feb70f;
  font-size: 30rpx;
  padding-right: 15rpx;
  height:160rpx;
  overflow : hidden;
}
.result .shop image {
  margin-left:20rpx; 
	width: 255rpx;
	height: 266rpx;
}

.loading {
	font-size: 32rpx;
	text-align: center;
	line-height: 2;
	margin-bottom: 20rpx;
}
