.header {
	background: #feb70f;
	padding: 30rpx;
  height: 300rpx;
}
.header .avatar {
	display: block;
	margin: 0 auto;
	width: 160rpx;
	height: 160rpx;
	border-radius: 50%;
	border: 2px solid #fee767;
}
.header .nickname {
	color: #000;
	font-size: 22px;
	line-height: 2.4;
	text-align: center;
}
.orderview {
  margin-top: 20rpx;
  background: white;
}
.orderview .scroll{
  display: -webkit-flex;
}
.orderview .scroll .imageview{
  margin: 0 15rpx;
}
.orderview .scroll .imageview .image{
  position: relative;
  border-radius: 50%;
  width: 180rpx;
  height: 180rpx;
}
 .line {
	clear: both;
	width: 100%;
	height: 1px;
	border-bottom: 1px dashed #000;
	padding-top: 20rpx;
}
